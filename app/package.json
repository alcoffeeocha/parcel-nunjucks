{
  "name": "app",
  "version": "1.0.0",
  "description": "parcel with nunjucks boilerplate",
  "repository": "https://github.com/alcoffeeocha/parcel-nunjucks.git",
  "author": "alcoffeeocha <muhammad.alkahfi@sac.id>",
  "license": "ISC",
  "watch": {
    "build:html": {
      "patterns": [
        "src",
        "test"
      ],
      "extensions": "njk",
      "runOnChangeOnly": true
    }
  },
  "scripts": {
    "dev": "run-p build:html run:parcel watch:nunjucks",
    "run:parcel": "parcel 'src/html/*.html' --port 8080 --open",
    "build:html": "nunjucks-to-html --baseDir src/templates --dest src/html/",
    "build:parcel": "parcel build 'src/html/*.html' --no-source-maps --no-optimize --no-content-hash",
    "build": "run-s clean build:html build:parcel",
    "serve": "http-server dist",
    "watch:nunjucks": "npm-watch",
    "clean": "rimraf dist && rimraf src/html"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.7.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "nunjucks": "^3.2.3",
    "nunjucks-to-html": "^1.1.0",
    "parcel": "^2.7.0",
    "parcel-resolver-ignore": "^2.1.3",
    "process": "^0.11.10",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "http-server": "^14.1.1"
  }
}
